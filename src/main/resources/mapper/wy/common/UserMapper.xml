<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.wy.common.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="com.example.wy.common.entity.User" >
        <result column="phone" property="phone" />
        <result column="name" property="name" />
        <result column="age" property="age"  />
        <result column="job" property="job"  />
        <result column="password" property="password"  />
        <result column="stature" property="stature"  />
        <result column="weight" property="weight"  />
        <result column="key" property="key"  />
    </resultMap>


    <!-- 根据用户名查询用户-->
    <select id="loadUserByUsername" resultMap="BaseResultMap">
        select * from user where phone=#{name}
    </select>
    <select id="selectAllByPhone" resultType="com.example.wy.common.entity.User">
        select * from user where phone=#{phone}
    </select>

</mapper>
